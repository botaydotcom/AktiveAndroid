<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true"
        android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="3dp"/>
            <stroke
                android:width="1dip"
                android:color="@color/aktive_grey_normal"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/aktive_grey_normal"/>
            <solid android:color="@color/aktive_white"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/aktive_grey_normal"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="3dp"/>
            <size
                android:width="40dp"
                android:height="40dp"
                ></size>
            <solid  android:color="@color/aktive_white"/>
            <stroke
                android:width="1dip"
                android:color="@color/aktive_grey_normal"/>
        </shape>
    </item>
</selector>